import React, { useState } from 'react';
import { delete{{ entity_name }} } from '../services/{{ entity_name.lower() }}Service';

function Delete{{ entity_name }}({ match }) {
    const [message, setMessage] = useState('');

    const handleDelete = async () => {
        try {
            const response = await delete{{ entity_name }}(match.params.id);
            setMessage('{{ entity_name }} deletado com sucesso!');
        } catch (error) {
            setMessage('Erro ao deletar {{ entity_name }}');
        }
    };

    return (
        <div>
            <h2>Deletar {{ entity_name }}</h2>
            {% if figma_components %}
                {% for component_name, component_html in figma_components.items() %}
                <div dangerouslySetInnerHTML={{ __html: "{{ component_html | safe }}" }} />
                {% endfor %}
            {% else %}
                <div>
                    <p>{message}</p>
                    <button onClick={handleDelete}>Deletar {{ entity_name }}</button>
                </div>
            {% endif %}
        </div>
    );
}

export default Delete{{ entity_name }};